<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/wgu_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:text="@string/all_terms"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TableLayout
                android:id="@+id/tbl_terms"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:stretchColumns="*">

                <TableRow>
                    <TextView android:text="@string/tbl_row_id" android:textSize="16sp"/>
                    <TextView android:text="@string/tbl_row_title" android:textSize="16sp"/>
                    <TextView android:text="@string/tbl_row_start" android:textSize="16sp"/>
                    <TextView android:text="@string/tbl_row_end" android:textSize="16sp"/>
                    <TextView android:text="@string/tbl_row_active" android:textSize="16sp"/>
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>